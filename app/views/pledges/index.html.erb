<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Daily Heroes
            </h1>
            <h2 class="subtitle">
                All Pledges
            </h2>
        </div>
    </div>
</section>

<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Pledge</th>
            <th>Description</th>
        </tr>
    </thead>

    <% @pledges.each do |p| %>

    <tbody>
        <tr>
            <td> <%= link_to p.action, pledge_path(p) %> </td>
            <td> <%= p.description %> </td>
        </tr>
    </tbody>
    <% end %>
</table>