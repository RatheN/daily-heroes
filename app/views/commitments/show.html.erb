<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Daily Heroes
            </h1>
            <h2 class="subtitle">
              <%= @commitment.user.name %>'s Commitment
            </h2>
        </div>
    </div>
</section>

<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Pledge</th>
            <th>Description</th>
            <th>Frequency</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th> <%= @commitment.pledge.action %> </th>
            <td> <%= @commitment.pledge.description %> </td>
            <td> <%= @commitment.frequency %> </td>
        </tr>
    </tbody>
</table>

<div class="buttons">
  <button class="button is-primary"><%= link_to "Edit Commitment", edit_commitment_path(@commitment) if @commitment.user == current_user %></button>
  <button class="button is-danger"> <%= button_to "delete", @commitment, :method => :delete if @commitment.user == current_user %> </button>
</div>