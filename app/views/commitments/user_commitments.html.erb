<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Daily Heroes
            </h1>
            <h2 class="subtitle">
                <%= current_user.name %>'s Commitments
            </h2>
        </div>
    </div>
</section>

<table class="table is-fullwidth">
    <thead>
        <tr>
            <th>Pledge</th>
            <th>Frequency</th>
        </tr>
    </thead>

    <% @commitments.each do |p| %>

    <tbody>
        <tr>
            <td> <%= link_to p.pledge.action, commitment_path(p) %> </td>
            <td> <%= p.frequency %> </td>
        </tr>
    </tbody>
    <% end %>
</table>