<h3>Sign Up</h3>

<%= form_for(@user) do |f| %>
    <div class='field'>
        <%= f.label :name %>
        <%= f.text_field :name %><br><br>
    </div>

    <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email %><br><br>
    </div>

    <div class='field'>
        <%= f.label :password %>
        <%= f.password_field :password %><br><br>
    </div>

    <%= f.submit "Create User" %>
  
  <% end %>