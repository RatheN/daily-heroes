<section class="hero is-primary">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                Daily Heroes
            </h1>
            <h2 class="subtitle">
                Log In
            </h2>
        </div>
    </div>
</section>

<br>

<% if @error %>
    <article class="message is-danger">
        <div class="message-body">
            <%= @error %>
        </div>
    </article>
<% end %>

<br>

<%= form_for :user, url: '/login' do |f| %>
    <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email %><br>
    </div>

    <div class='field'>
        <%= f.label :password %>
        <%= f.password_field :password %><br>
    </div>
    
    <%= f.submit "Log In" %>
<% end %>

<br>

<div class="buttons">
    <button class="button is-primary"> <%= link_to("Sign Up", '/signup') %> </button>
    <button class="button is-link is-light"> <%= link_to("Log in with Google", '/auth/google_oauth2') %> </button>
</div>