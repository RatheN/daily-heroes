<h1>Log in</h1>

<p><%= @error %></p>
<%= form_for :user, url: '/login' do |f| %>
    <div class='field'>
        <%= f.label :email %>
        <%= f.email_field :email %><br>
    </div>

    <div class='field'>
        <%= f.label :password %>
        <%= f.password_field :password %><br>
    </div>
    
    <%= f.submit "Log In" %>
  <% end %>

  <h4><%= link_to("Log in with Google", '/auth/google_oauth2') %></h4>